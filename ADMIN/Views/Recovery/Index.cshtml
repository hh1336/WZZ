
<h3>回收站</h3>
<table id="myTable" lay-filter="filter"></table>


<!--工具栏模板：-->
<script type="text/html" id="toolbar">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm" id="reload">刷新</button>
        <button class="layui-btn layui-btn-sm" id="clear">清空回收站</button>
    </div>
</script>

@section Scripts{


    <script>
        //全局化排序
        var _sortField = "id";
        var _sortType = "desc";
        //记录初始化好的表格
        var table;

        //加载数据
        function load() {
            layui.use('table', function () {
                //将初始化好的表格赋值到全局
                table = layui.table;
                //对这个表格进行加载
                table.render({
                    elem: '#myTable',
                    url: '/Recovery/GetList', //数据接口
                    toolbar: "#toolbar",//开启工具栏
                    defaultToolbar: ['#toolbar'],//定义工具栏的工具位置
                    page: true,//开启分页,可传入dom元素自定义分页样式
                    loading: true,//加载时出现等待条
                    contentType: "json",//接收内容为json类型
                    id: 'Reload',//定义标识，用于刷新
                    method: "GET",//请求方式为post
                    title: "文章表",//标题
                    limit: 10,//每页显示条数
                    limits: [10, 20, 50],//一次显示多条
                    autoSort: false,//false为服务器来进行排序
                    initSort: {//初始排序状态
                        field: 'id',
                        type: 'desc'
                    },
                    cols: [[ //表头
                        {
                            field: 'id',//数据名称
                            title: 'ID',//显示名称
                            //sort: true,//排序开启
                            fixed: 'left',//固定在左侧
                            unresize: true,//不可拖动的列宽
                            align: "center",//内容居中
                            templet: function (data) {//data里面存放着一整条数据
                                return data.LAY_INDEX;//返回当前数据的索引
                            }
                        },
                        {
                            field: 'action',
                            title: '操作',
                            unresize: true,
                            align: "center",
                            templet: function (data) {
                                var btn = "";
                                var edit = "<a class='layui-btn layui-btn-xs layui-btn-primary'name='back' data-toggle='tooltip' data-placement='right' title='撤销删除' data-id='" + data.id + "' ><i class='layui-icon'>&#xe609;</i></a> <span></span>";
                                var del = "<a class='layui-btn layui-btn-xs layui-btn-primary' name='del' data-id='" + data.id + "' ><i class='layui-icon'>&#xe640;</i></a>";
                                btn = edit + del;
                                return btn;
                            }
                        },
                        {
                            field: 'title',
                            title: '标题',
                            unresize: true,
                            align: "center"
                        },
                        {
                            fileId: 'WZZModel.name',
                            title: '所属模块',
                            unresize: true,
                            align: 'center',
                            templet: (data) => {
                                return data.WZZModel.WZZModels.name + ">" + data.WZZModel.name;
                            }
                        },
                        {
                            field: 'createTime',
                            title: '发布时间',
                            sort: true,
                            align: "center",
                            templet: function (data) {
                                return Common.ToDateTime(data.createTime);
                            }
                        },
                        {
                            field: 'updateTime',
                            title: '最后更新时间',
                            sort: true,
                            align: "center",
                            templet: function (data) {
                                if (data.updateTime !== null) {
                                    return Common.ToDateTime(data.updateTime);
                                }
                                return "";

                            }
                        },
                        {
                            field: 'author',
                            title: '作者',
                            sort: true,
                            unresize: true,
                            align: "center"
                        },
                        {
                            field: 'source',
                            title: '来源',
                            sort: true,
                            unresize: true,
                            align: "center"
                        },
                        {
                            field: 'imgurl',
                            title: '图片',
                            unresize: true,
                            align: "center",
                            templet: function (data) {
                                var img = "无";
                                if (data.imgurl != null && data.imgurl != "" && data.imgurl != undefined) img = "<a href='#' class='selectimg layui-icon' imgurl='" + data.imgurl + "'>&#xe615;</a>";

                                return img;
                            }
                        }
                    ]],
                    where: {//加载表格时需要传入的参数
                        field: _sortField,
                        order: _sortType
                    },
                    response: {//定义后台返回json时的格式
                        statusName: "code",//定义返回的状态码名称
                        statusCode: 200,//定义成功时应返回的状态码
                    },
                    done: function (res, curr, count) {//表格加载完成后的回调函数
                        //console.log(res);
                        //console.log(curr);
                        //console.log(count);
                        //res为接口数据
                        //curr为页码
                        //count为条数
                        $('[data-toggle="tooltip"]').tooltip();
                    }

                });

                //监听排序字段
                table.on("sort(filter)", function (obj) {
                    //排序发生改变时将排序字段赋值记录到全局
                    _sortField = obj.field;
                    _sortType = obj.type;

                    //触发刷新事件，将当前初始化的表格传入
                    reload(obj);
                });

            });

        }

        //刷新表格，需要接收一个初始化后的表格
        function reload(obj) {
            if (obj == undefined || obj == "") {
                obj = {
                    field: "id",
                    type: "desc"
                };
            }
            //刷新事件,第一个参数为标识id
            table.reload("Reload", {
                initSort: obj,
                where: {
                    field: obj.field,
                    order: obj.type
                }
            });
        }

        //刷新按钮
        $(document).on("click", "#reload", function (e) {
            e.preventDefault();
            //调用刷新方法
            reload({
                field: _sortField,
                type: _sortType
            });
        });

        //清空回收站
        $(document).on("click", "#clear", function (e) {
            e.preventDefault();
            var index = Common.alert("提示", "慎重操作!所有回收站的数据将会被清除", function () {
                layer.close(index);
                var loadindex = layer.open({
                    content: "系统操作中,请误刷新页面",
                    type: 3
                });
                $.post("/Recovery/Clear", {}, function (result) {
                    if (!result.code) {
                        layer.msg("删除失败,请刷新重试", { icon: 2 });
                        return;
                    }
                    for (var i = 0; i < result.list.length; i++) {
                        $.post("/Home/DelFile", { url: result.list[i] });
                    }
                    layer.close(loadindex);
                    layer.msg("删除成功!", { icon: 1 });
                    //刷新数据
                    reload({
                        field: _sortField,
                        type: _sortType
                    });

                })
            })
        })

        //删除数据的方法
        $(document).on("click", "a[name=del]", function (e) {
            e.preventDefault();
            var _id = $(this).attr("data-id");
            var index = Common.alert("删除数据", "是否永久删除此数据和关联的数据", function () {
                layer.close(index);
                $.ajax({
                    url: "/Recovery/DelData",
                    type: "post",
                    dataType: "json",
                    data: { id: _id }
                }).done(function (result) {
                    if (!result.code) {
                        layer.msg("删除失败,请刷新重试", { icon: 2 });
                        return;
                    }
                    layer.msg("删除成功!", { icon: 1 });
                    //刷新数据
                    reload({
                        field: _sortField,
                        type: _sortType
                    });
                    for (var i = 0; i < result.list.length; i++) {
                        $.post("/Home/DelFile", { url: result.list[i] });
                    }

                })
            });

        })

        //恢复按钮
        $(document).on("click", "a[name=back]", function (e) {
            e.preventDefault();
            var _id = $(this).attr("data-id");
            var index = Common.alert("恢复数据", "是否恢复此条数据？", () => {
                $.post("/Recovery/BackData", { id: _id }, (result) => {
                    if (result.code) {
                        layer.msg("恢复成功！", { icon: 1 });
                        layer.close(index);
                        //刷新数据
                        reload({
                            field: _sortField,
                            type: _sortType
                        });
                        return;
                    }
                    layer.msg("恢复失败，请刷新后重试", { icon: 2 });
                })
            })

        })

        //用户点击查看图片时
        $(document).on("click", ".selectimg", function () {
            var url = $(this).attr("imgurl");//得到这张图片的url
            var img = '<img src="' + url + '" style="margin:0 auto;" />';
            Common.alert("文章图片", img);
        });



        $(function () {
            load();
        })

    </script>
}

